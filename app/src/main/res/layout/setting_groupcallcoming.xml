<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

	<include layout="@layout/ddd"/>

	<LinearLayout
		android:id="@id/high"
		android:layout_width="fill_parent"
		android:layout_height="55.0dip"
		android:background="@android:drawable/list_selector_background"
		android:gravity="center_vertical"
		android:minHeight="?android:listPreferredItemHeight"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text="@string/setting_intercom_1"
			android:textAppearance="?android:textAppearanceMedium"/>

		<TextView
			android:id="@id/high_summary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text=""
			android:textAppearance="?android:textAppearanceSmall"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="1.0dip"
		android:background="?android:listDivider"
		android:paddingTop="3.0dip"/>

	<LinearLayout
		android:id="@id/same"
		android:layout_width="fill_parent"
		android:layout_height="55.0dip"
		android:background="@android:drawable/list_selector_background"
		android:gravity="center_vertical"
		android:minHeight="?android:listPreferredItemHeight"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text="@string/setting_intercom_2"
			android:textAppearance="?android:textAppearanceMedium"/>

		<TextView
			android:id="@id/same_summary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text=""
			android:textAppearance="?android:textAppearanceSmall"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="1.0dip"
		android:background="?android:listDivider"
		android:paddingTop="3.0dip"/>

	<LinearLayout
		android:id="@id/low"
		android:layout_width="fill_parent"
		android:layout_height="55.0dip"
		android:background="@android:drawable/list_selector_background"
		android:gravity="center_vertical"
		android:minHeight="?android:listPreferredItemHeight"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text="@string/setting_intercom_3"
			android:textAppearance="?android:textAppearanceMedium"/>

		<TextView
			android:id="@id/low_summary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text=""
			android:textAppearance="?android:textAppearanceSmall"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="1.0dip"
		android:background="?android:listDivider"
		android:paddingTop="3.0dip"/>

	<LinearLayout
		android:id="@id/restore"
		android:layout_width="fill_parent"
		android:layout_height="55.0dip"
		android:background="@android:drawable/list_selector_background"
		android:gravity="center_vertical"
		android:minHeight="?android:listPreferredItemHeight"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0.0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:paddingLeft="10.0dip"
			android:paddingRight="10.0dip">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="marquee"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:marqueeRepeatLimit="marquee_forever"
				android:singleLine="true"
				android:text="@string/restore_after_automatic_answer"
				android:textAppearance="?android:textAppearanceMedium"/>

			<TextView
				android:id="@id/restore_summary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textAppearance="?android:textAppearanceSmall"/>
		</LinearLayout>

		<com.zed3.utils.SwitchButton
			android:id="@id/restore_switcher"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="10.0dip"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="1.0dip"
		android:background="?android:listDivider"
		android:paddingTop="3.0dip"/>

	<LinearLayout
		android:id="@id/pttkey"
		android:layout_width="fill_parent"
		android:layout_height="68.0dip"
		android:background="@android:drawable/list_selector_background"
		android:gravity="center_vertical"
		android:minHeight="?android:listPreferredItemHeight"
		android:orientation="vertical"
		android:visibility="gone">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text="对讲键值设置"
			android:textAppearance="?android:textAppearanceMedium"/>

		<TextView
			android:id="@id/pttsummary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="10.0dip"
			android:text=""
			android:textAppearance="?android:textAppearanceSmall"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="1.0dip"
		android:background="?android:listDivider"
		android:paddingTop="3.0dip"
		android:visibility="gone"/>
</LinearLayout>
