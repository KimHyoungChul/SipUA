<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/devices"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="50.0dip"
                android:background="@drawable/background_sytle3"
                android:orientation="vertical">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_margin="2.0dip">

		<LinearLayout
			android:id="@id/bt_bottombar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true">

			<Button
				android:id="@id/start_service"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1.0"
				android:text="@string/voice_connection"/>

			<Button
				android:id="@id/start_seach"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1.0"
				android:text="@string/start_search"/>
		</LinearLayout>

		<ListView
			android:id="@id/list"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_above="@id/bt_bottombar"
			android:layout_below="@id/devices"
			android:layout_weight="1.0"
			android:divider="#ffc6c6c6"
			android:scrollingCache="false"/>
	</RelativeLayout>
</RelativeLayout>
