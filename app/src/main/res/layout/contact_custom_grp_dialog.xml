<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:gravity="center">

	<TextView
		android:id="@id/dialog_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="20.0dip"
		android:layout_marginTop="20.0dip"
		android:text="@string/create_grp_title"
		android:textColor="@color/black"
		android:textSize="16.0sp"
		android:textStyle="bold"/>

	<LinearLayout
		android:id="@id/dialog_msg"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/dialog_title"
		android:layout_marginLeft="5.0dip"
		android:layout_marginRight="5.0dip"
		android:gravity="center"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_marginRight="3.0dip"
			android:layout_weight="1.0"
			android:gravity="center"
			android:singleLine="true"
			android:text="@string/custom_grp_name"
			android:textColor="@color/black"
			android:textSize="15.0sp"/>

		<EditText
			android:id="@id/custom_grp_name"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="4.0"
			android:gravity="center|left"
			android:hint="@string/input_hint"
			android:inputType="text"
			android:maxLength="32"
			android:singleLine="true"
			android:textSize="13.0sp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/dialog_msg"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="10.0dip"
		android:layout_marginTop="10.0dip"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<Button
			android:id="@id/custom_grp_ok"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dip"
			android:layout_marginRight="10.0dip"
			android:layout_weight="1.0"
			android:gravity="center"
			android:singleLine="true"
			android:text="@string/custom_grp_ok"
			android:textColor="@color/black"
			android:textSize="15.0sp"/>

		<Button
			android:id="@id/custom_grp_cancel"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dip"
			android:layout_marginRight="10.0dip"
			android:layout_weight="1.0"
			android:gravity="center"
			android:singleLine="true"
			android:text="@string/custom_grp_cancel"
			android:textColor="@color/black"
			android:textSize="15.0sp"/>
	</LinearLayout>
</RelativeLayout>
