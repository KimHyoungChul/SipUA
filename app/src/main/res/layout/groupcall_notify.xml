<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300.0dip"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/holo_blue_light"
              android:orientation="vertical"
              android:theme="@android:style/Theme.Dialog"
              android:weightSum="1.0">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#ffffffff"
		android:orientation="vertical"
		android:padding="5.0dip">

		<RelativeLayout
			android:id="@id/linearLayout1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ffbe0a0b"
			android:orientation="vertical">

			<TextView
				android:id="@id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/notify_message_title"
				android:textAppearance="?android:textAppearanceLarge"/>

			<TextView
				android:id="@id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/textView1"
				android:text="(8)"
				android:textAppearance="?android:textAppearanceLarge"/>
		</RelativeLayout>

		<LinearLayout
			android:id="@id/linearLayout2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="10.0dip">

			<TextView
				android:id="@id/notify_content"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="center"
				android:paddingLeft="5.0dip"
				android:paddingRight="5.0dip"
				android:paddingTop="15.0dip"
				android:singleLine="true"
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="#ff000000"/>

			<TextView
				android:id="@id/notify_content_string"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:gravity="center"
				android:paddingBottom="10.0dip"
				android:paddingLeft="10.0dip"
				android:paddingRight="10.0dip"
				android:paddingTop="5.0dip"
				android:text="@string/notify_message_text"
				android:textAppearance="?android:textAppearanceMedium"
				android:textColor="#ff000000"/>
		</LinearLayout>

		<RelativeLayout
			android:id="@id/relativeLayout1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="10.0dip">

			<Button
				android:id="@id/button_ok"
				android:layout_width="100.0dip"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20.0dip"
				android:text="@string/ok_switch"/>

			<Button
				android:id="@id/button_cancel"
				android:layout_width="100.0dip"
				android:layout_height="wrap_content"
				android:layout_alignBaseline="@id/button_ok"
				android:layout_alignBottom="@id/button_ok"
				android:layout_alignParentRight="true"
				android:layout_marginRight="20.0dip"
				android:text="@string/cancel_switch"/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
