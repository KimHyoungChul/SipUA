<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:background="@drawable/aa_group_list_name_selector"
                android:gravity="center_vertical"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip">

	<TextView
		android:id="@id/member_list_name"
		android:layout_width="90.0dip"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:singleLine="true"
		android:text="李师傅的大哥"
		android:textColor="#ffffffff"
		android:textSize="15.0sp"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true">

		<ImageView
			android:id="@id/call_msg_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingBottom="5.0dip"
			android:paddingLeft="5.0dip"
			android:paddingRight="5.0dip"
			android:paddingTop="5.0dip"
			android:src="@drawable/ptt_listitem_msgbtn"/>

		<LinearLayout
			android:id="@id/line_sub2"
			android:layout_width="1.0dip"
			android:layout_height="21.0dip"
			android:layout_marginTop="7.0dip"
			android:background="#ff999999"
			tools:ignore="Orientation"/>

		<ImageView
			android:id="@id/call_voice_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingBottom="5.0dip"
			android:paddingLeft="5.0dip"
			android:paddingRight="5.0dip"
			android:paddingTop="5.0dip"
			android:src="@drawable/ptt_listitem_voicebtn"/>

		<LinearLayout
			android:id="@id/line_sub"
			android:layout_width="1.0dip"
			android:layout_height="21.0dip"
			android:layout_marginTop="7.0dip"
			android:background="#ff999999"
			tools:ignore="Orientation"/>

		<ImageView
			android:id="@id/member_list_video_call"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingBottom="5.0dip"
			android:paddingLeft="5.0dip"
			android:paddingRight="5.0dip"
			android:paddingTop="5.0dip"
			android:src="@drawable/camerabtnfile"/>
	</LinearLayout>
</RelativeLayout>
