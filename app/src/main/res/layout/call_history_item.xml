<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@id/call_history_photo"
			android:layout_width="45.0dip"
			android:layout_height="45.0dip"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="7.0dip"
			android:src="@drawable/person_icon"/>

		<TextView
			android:id="@id/tempCallName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textColor="#ff000000"
			android:textSize="14.0sp"
			android:textStyle="bold"/>

		<ImageView
			android:id="@id/call_history_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:layout_marginLeft="7.0dip"
			android:paddingBottom="7.0dip"
			android:src="@drawable/iconfont_jieru_01"/>

		<LinearLayout
			android:id="@id/infoLayout"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_marginLeft="7.0dip"
			android:layout_marginTop="6.0dip"
			android:layout_weight="1.0"
			android:orientation="vertical">

			<TextView
				android:id="@id/call_history_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:text="bob"
				android:textColor="#ff000000"
				android:textSize="14.0sp"/>

			<LinearLayout
				android:id="@id/typeLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip"
				android:orientation="horizontal">

				<TextView
					android:id="@id/call_history_number"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:text="\ 1231231321"
					android:textColor="#ff000000"
					android:textSize="14.0sp"/>

				<TextView
					android:id="@id/call_history_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20.0dip"
					android:gravity="center"
					android:singleLine="true"
					android:textColor="#ff000000"
					android:textSize="12.0sp"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@id/funcLayout"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:visibility="gone">

			<ImageView
				android:id="@id/call_msg_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:paddingBottom="11.0dip"
				android:paddingLeft="10.0dip"
				android:paddingRight="10.0dip"
				android:paddingTop="11.0dip"
				android:src="@drawable/ptt_listitem_msgbtn"/>

			<LinearLayout
				android:id="@id/line_sub2"
				android:layout_width="1.0dip"
				android:layout_height="30.0dip"
				android:layout_gravity="center_vertical"
				android:background="#ff999999"
				android:orientation="horizontal"/>

			<ImageView
				android:id="@id/call_voice_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:paddingBottom="11.0dip"
				android:paddingLeft="10.0dip"
				android:paddingRight="10.0dip"
				android:paddingTop="11.0dip"
				android:src="@drawable/ptt_listitem_voicebtn"/>

			<LinearLayout
				android:id="@id/line_sub"
				android:layout_width="1.0dip"
				android:layout_height="30.0dip"
				android:layout_gravity="center_vertical"
				android:background="#ff999999"
				android:orientation="horizontal"/>

			<ImageView
				android:id="@id/call_video_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:paddingBottom="11.0dip"
				android:paddingLeft="10.0dip"
				android:paddingRight="10.0dip"
				android:paddingTop="11.0dip"
				android:src="@drawable/camerabtnfile"/>
		</LinearLayout>

		<ImageView
			android:id="@id/intobut"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingRight="10.0dip"
			android:src="@drawable/iconfont_xiangqing"/>

		<RelativeLayout
			android:id="@id/timeLayout"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center|right"
			android:paddingRight="10.0dip">

			<TextView
				android:id="@id/tempCallTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="10.0dip"
				android:textColor="@color/font_color"
				android:textSize="14.0sp"/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
