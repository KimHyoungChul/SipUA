<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/addressbook_bottom_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffffff"
              android:orientation="vertical">

	<LinearLayout
		android:id="@id/addressbook_item_layout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@android:drawable/list_selector_background"
		android:gravity="center_vertical"
		android:paddingBottom="5.0dip"
		android:paddingLeft="10.0dip"
		android:visibility="gone">

		<TextView
			android:id="@id/tv_company_name"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="5.0"
			android:gravity="left"
			android:text="公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示公司全称，多行显示"
			android:textColor="#ff000000"
			android:textSize="16.0sp"/>

		<TextView
			android:id="@id/tv_company_num"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="right"
			android:text="150"
			android:textColor="#ff000000"
			android:textSize="16.0sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2.0dip"
			android:layout_weight="0.2"
			android:gravity="left"
			android:text=">"
			android:textColor="#ff000000"
			android:textSize="16.0sp"/>
	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="0.5dip"
		android:background="@color/black"/>

	<com.zed3.sipua.ui.lowsdk.PinnedHeaderExpandableListView
		android:id="@id/addressbook_bottom_listview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:cacheColorHint="#00000000"
		android:childDivider="@color/black"
		android:divider="@color/black"
		android:dividerHeight="0.70000005dip"
		android:footerDividersEnabled="true"
		android:listSelector="#00000000"/>
</LinearLayout>
