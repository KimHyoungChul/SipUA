<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="70.0dip"
              android:background="@color/tab_wihte"
              android:gravity="center_vertical"
              android:orientation="horizontal">

	<ImageView
		android:id="@id/item_transfer_imv"
		android:layout_width="60.0dip"
		android:layout_height="60.0dip"
		android:layout_marginLeft="10.0dip"/>

	<TextView
		android:id="@id/item_transfer_tv_content"
		android:layout_width="140.0dip"
		android:layout_height="55.0dip"
		android:layout_marginLeft="10.0dip"
		android:gravity="center"
		android:text="@string/nothing_write"
		android:textColor="@color/black"
		android:textSize="14.0sp"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left"
		android:orientation="vertical">

		<TextView
			android:id="@id/item_transfer_tv_person"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/send_to"
			android:textColor="@color/black"
			android:textSize="12.0sp"/>

		<TextView
			android:id="@id/item_transfer_tv_sent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/status_title"
			android:textColor="@color/black"
			android:textSize="12.0sp"/>

		<TextView
			android:id="@id/item_transfer_tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="2012-03-08 11:88"
			android:textColor="@color/black"
			android:textSize="12.0sp"/>
	</LinearLayout>
</LinearLayout>
